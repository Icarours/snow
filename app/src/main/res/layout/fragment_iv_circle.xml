<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/mm3"
              android:orientation="vertical">
    <com.syl.snow.view.RoundImageView
        android:id="@+id/iv1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/mm1"/>
    <com.syl.snow.view.CustomRoundAngleImageView
        android:id="@+id/iv2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/mm1"
        app:left_bottom_radius="16dp"
        app:left_top_radius="16dp"/>
    <!--圆形图片,外侧套有白色圆环-->
    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
        <ImageView android:id="@+id/iv3"
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:layout_centerInParent="true"
                   android:src="@drawable/mm1"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_rectangle_white_000000"
        />
    </RelativeLayout>
</LinearLayout>